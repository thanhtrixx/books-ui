- categoris = ['TOP', 'NEW', 'IMPROVE']
each category in categoris
	.well.well-sm
		a(href='#')
			strong= category
	#books.row
		- for (var x = 0; x < 8; x++)
			.book.col-lg-3.col-sm-4.col-xs-6
				.thumbnail
					img.img-responsive(src='assets/book-200x300.jpg', alt='')
					p.caption.text-center
						| Product title
